@model WebUI.Models.FileExplorerViewModel

<!DOCTYPE html>
<html>
<head>
    <title>File manager</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/FileManager/js")
    @Styles.Render("~/FileManager/css")
    <style>
        html, body {
            width: 100%;
            height: 100%; 
            overflow: hidden; 
            margin: 0px; 
        }
        div.image_preview {
			position: relative;
            width: 100%; 
            height: 100%;
			padding: 0px;
			margin: 0px;
			background-repeat: no-repeat;
            background-size:cover; 
			overflow: hidden;
		}
    </style>
</head>
<body>
<script type="text/javascript">
    init('@Model.UserName', JSON.parse(@Html.Raw(Json.Encode(Model.TreeStructJson))), JSON.parse(@Html.Raw(Json.Encode(Model.SharedTreeStructJson))));
</script>
</body>
</html>